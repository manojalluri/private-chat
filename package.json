{
  "name": "anora",
  "version": "1.0.0",
  "description": "Privacy-first anonymous room-based communication app",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd src && npm run dev",
    "start": "node server/index.js",
    "build": "npm install && cd src && npm install && npm run build",
    "install-all": "npm install && cd src && npm install"
  },
  "keywords": [
    "anonymous",
    "chat",
    "privacy",
    "room"
  ],
  "author": "ANORA Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "bad-words": "^3.0.4",
    "crypto-js": "^4.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}