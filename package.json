{
  "name": "anora",
  "version": "1.0.0",
  "description": "Privacy-first anonymous room-based communication app",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd src && npm run dev",
    "start": "node server/index.js",
    "build": "cd src && npm install && npm run build",
    "install-all": "npm install && cd src && npm install"
  },
  "keywords": [
    "anonymous",
    "chat",
    "privacy",
    "room"
  ],
  "author": "ANORA Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}